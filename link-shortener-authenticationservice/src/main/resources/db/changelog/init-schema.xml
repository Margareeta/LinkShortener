<?xml version="1.1" encoding="UTF-8" standalone="no"?>
<databaseChangeLog xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                   http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.6.xsd">
    <changeSet id="1" author="Margareeta">
        <createTable tableName="links" remarks="Таблица ссылок">
            <column name="short_link" type="text" autoIncrement="false"
                    remarks="Короткая ссылка (id)">
                <constraints primaryKey="true"/>
            </column>
            <column name="full_link" type="text" remarks="Полная ссылка">
                <constraints nullable="false"/>
            </column>
            <column name="click_counter" type="bigint" remarks="Колличество вызовов">
                <constraints nullable="false"/>
            </column>
            <column name="created_at" type="datetime" remarks="Дата создания">
            </column>
        </createTable>
    </changeSet>

</databaseChangeLog>